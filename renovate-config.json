{
  "digest": {
    "automerge": true
  },
  "extends": [
    "config:base",
    "docker:enableMajor",
    ":automergePr",
    ":automergeRequireAllStatusChecks",
    ":maintainLockFilesWeekly",
    ":semanticCommits"
  ],
  "digest": {
    "extends": [
      "schedule:weekly"
    ],
    "labels": ["digest", "renovate"]
  },
  "labels": ["renovate"],
  "major": {
    "labels": ["major", "renovate"]
  },
  "minor": {
    "labels": ["minor", "renovate"]
  },
  "patch": {
    "labels": ["patch", "renovate"]
  },
  "pin": {
    "labels": ["pin", "renovate"]
  },
  "pinDigests": true,
  "timezone": "Asia/Bangkok"
}
